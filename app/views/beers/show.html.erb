<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<%if @beer.ratings.empty? %>
    Beer has not yet been rated!
    <% else %>
    Has <%= @beer.ratings.length.to_s(10) << " rating".pluralize(@beer.ratings.length)%>, average <%= @beer.average_rating %>
    <% end %>

<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %>
