<h1>Listing beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to 'Name', beers_path(order:"name") %></th>
      <th><%= link_to 'Style', beers_path(order:"style") %></th>
      <th><%= link_to 'Brewery', beers_path(order:"brewery") %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td class="vert-align"><%= link_to beer.name, beer %></td>
        <td class="vert-align"><%= beer.style.name %></td>
        <td class="vert-align"><%= link_to beer.brewery.name, beer.brewery %></td>
        <td class="vert-align"><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td class="vert-align"><%= link_to 'delete', beer, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%=link_to "List of breweries", breweries_path %></p>
<br>


<% if not current_user.nil? %>
<%= link_to 'New Beer', new_beer_path, class:"btn btn-success" %>
<% end %>