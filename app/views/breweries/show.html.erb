
<h2><%= @brewery.name %>
    <% if not @brewery.active %>
      <span class="label label-info">retired</span></h2>
    <% end %>

<p>
  <i>Established in <%= @brewery.year %></i>

</p>

<p>
  Number of beers <%= @brewery.beers.count %>

</p>

<p>
    <% @brewery.beers.each do |beer| %>
        <%= link_to beer.name, beer%>
    <% end %>
</p>

<% if(!@brewery.ratings.empty?) %>
    <p>Has <%= @brewery.ratings.length.to_s(10) << " rating".pluralize(@brewery.ratings.length) %>, average: <%= round(@brewery.average_rating) %> </p>
<%	 end %>

<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>
<%= link_to 'Edit', edit_brewery_path(@brewery), class: "btn btn-primary"%> |
<%= link_to 'Back', breweries_path, class:"btn btn-primary" %>
