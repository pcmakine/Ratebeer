<h1>Breweries</h1>
<h2>Active</h2>

<% cache "activebrewerylist-#{@order}", skip_digest: true do %>
<p>Number of active breweries: <%= @active_breweries.count %></p>


<%= render 'list', breweries: @active_breweries %>
<% end %>

<h2>Retired</h2>

<% cache "retiredbrewerylist-#{@order}", skip_digest: true do %>
<p>Number of retired breweries: <%= @retired_breweries.count %></p>


<%= render 'list', breweries: @retired_breweries %>

<% end %>

<%= link_to 'New Brewery', new_brewery_path, class:"btn btn-success"  if current_user %>
